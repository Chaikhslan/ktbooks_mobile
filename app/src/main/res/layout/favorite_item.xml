<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/favorite_item_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_add_a_photo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:id="@+id/favorite_item_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Удалить"
            android:textSize="8sp"
            app:layout_constraintTop_toBottomOf="@id/favorite_item_image"
            app:layout_constraintStart_toStartOf="@id/favorite_item_image"
            app:layout_constraintEnd_toEndOf="@id/favorite_item_image"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/favorite_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Iphone 20 aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
            android:maxLines="2"
            android:textSize="12sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/favorite_item_image"
            android:layout_margin="20dp"/>

        <TextView
            android:id="@+id/favorite_item_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сазерленд Д"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/favorite_item_name"
            app:layout_constraintStart_toEndOf="@id/favorite_item_image"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/favorite_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5000 тенге"
            android:textSize="12sp"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            app:layout_constraintTop_toBottomOf="@+id/favorite_item_author"
            app:layout_constraintStart_toEndOf="@id/favorite_item_image"
            android:layout_marginTop="10dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>